    hive
    </span>Bizi</h1>
    
      
    <a href="/login" class="btn btn-danger logout-button">Logout</a>


<div class="bizi-card-container">
  <div class="card-header col-md-12 text-center">
    <h2 class="top-card-header">
    Input Your Info
    </h2>
  </div>

{{!-- Contact Info: --}}
<div class="card border-0" id="inputs-section">

    <div class="add-contact-info-container">
        <h3>Contact Info</h3>
        <form class="contact-info-form">
            <label for="user_name">
                Name:
            </label>
            <br />
            <input type="text" name="user_name" id="user_name">
                {{user_name}}        
            </input>
            <br />
            <label for="email_address">
                Email:
            </label>
            <br />
            <input type="text" name="email_address" id="email_address">
                {{email_address}}
            </input>
            <br />
            <label for="phone">
                Phone:
            </label>
            <br/>
            <input type="text" name="phone" id="phone_number">
                {{phone}}
            </input>
            <br />
            <label for="user_location">
                City, State:
            </label>
            <br />
            <input type="text" name="user_location" id="user_location">
                {{user_location}}
            </input>
            <br />        
        </form>
    </div>
    <br />

{{!-- Personal Snippet --}}
    <div class="personal-snippet">
        <h3>Personal Snippet</h3>
        <form class="personal-form">
            <label for="personal">
                What I do for You:
            </label>
            <br />
            <textarea name="personal" id="personal">
                {{personal}}
            </textarea>
            <br />        
        </form>
    </div>
    <br />

{{!-- Job Title and Company --}}
    <div class="job-container">
        <h3>Work</h3>
        <form class="work-form">
            <label for="title">
                Title:
            </label>
            <br />
            <input type="text" name="title" id="title">
                {{title}}        
            </input>
            <br />
            <label for="company">
                Company Name:
            </label>
            <br />
            <input type="text" name="company" id="company">
                {{company}}
            </input>
            <br />
            <br />
            <button type="submit" value="Submit">
            Submit
            </button>
            <br  />
        </form>
    </div>
</div>

